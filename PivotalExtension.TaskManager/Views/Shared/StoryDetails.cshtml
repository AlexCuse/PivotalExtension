@model PivotalExtension.TaskManager.Models.StoryViewModel
           
<div class="@Model.GetStyle()">
   
    <div class="estimate">@Model.GetEstimate()</div>
    <h3>@Model.GetHeader()</h3>
    <p>@Model.Story.Name</p>
    @{
       if(Model.AdvanceAction() == "start") {
         @Html.Raw("<a href=\"#\" onclick=\"StartStory('" + Model.FormattedId + "')" + (char)59 + "return false;" + (char)59 + "\">Start Story</a>");
       }

       if (Model.AdvanceAction() == "finish") {
         @Html.Raw("<a href=\"#\" onclick=\"FinishStory('" + Model.FormattedId + "')" + (char)59 + "return false;" + (char)59 + "\">Finish Story</a>");
       }
    }
</div>
    