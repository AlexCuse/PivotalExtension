<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Html.Partial("ContentBundle")
</head>
<body>
    <div class="container-fluid">
        <div class="topbar">
            <div class="fill">
                <div class="container">
                    <a class="brand" href="#">Pivotal Task Manager</a>
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("My Projects", "Index", "Projects")</li>
                        <li>@Html.Partial("_LogOnPartial")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="content">
            @*            <header>
                <nav>
                    <div id="menu_wrapper" class="black">
                        <ul id="menu">
                           
                        </ul>
                    </div>
                </nav>
            </header>*@
            <div class="row">
                <div class="span20">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer>
        </footer>
    </div>
    <script type="text/javascript">
        $.ajaxSetup({
            statusCode: {
                999: function () {
                    // custom code signaling Redirect the to the login page.
                    location.href = "/Account/LogOn";
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //whatever we do here, need to ignore status code 999's
                }
            }
        });
    </script>
</body>
</html>
